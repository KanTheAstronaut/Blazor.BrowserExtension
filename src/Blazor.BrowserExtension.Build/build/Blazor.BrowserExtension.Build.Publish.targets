<!-- build/Blazor.BrowserExtension.Build.Publish.targets -->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!--
    Converts the publish output of the project to browser extension.
  -->
  <Target Name="RunPublishBlazorToBrowserExtension">

    <PropertyGroup>
      <_BrowserExtension_Project_Assets_Directory>$(ProjectDir)$(BrowserExtensionAssetsPath)</_BrowserExtension_Project_Assets_Directory>
      <_BrowserExtension_Project_PublishOutput_Assets_Directory>$(PublishDir)$(BrowserExtensionAssetsPath)</_BrowserExtension_Project_PublishOutput_Assets_Directory>
      <_BrowserExtension_Project_PublishOutput_BrowserExtension_Directory>$(PublishDir)$(BrowserExtensionOutputPath)</_BrowserExtension_Project_PublishOutput_BrowserExtension_Directory>
      <_BrowserExtension_Project_PublishOutput_BrowserExtension_Framework_Directory>$(_BrowserExtension_Project_PublishOutput_BrowserExtension_Directory)\framework</_BrowserExtension_Project_PublishOutput_BrowserExtension_Framework_Directory>
    </PropertyGroup>

    <Message Importance="high" Text="Converting published Blazor application to Browser Extension" />

    <!-- Include publish output files in FileToCopy -->
    <Message Importance="normal" Text="  Processing publish output '$(_BrowserExtension_Project_PublishOutput_Assets_Directory)'" />
    <ItemGroup>
      <_BrowserExtension_Project_PublishOutput_Assets_Files Include="$(_BrowserExtension_Project_PublishOutput_Assets_Directory)\**\*.*" />
      <_BrowserExtension_Project_PublishOutput_Assets_Files Update="*">
        <RelativePath>$([MSBuild]::MakeRelative($(_BrowserExtension_Project_PublishOutput_Assets_Directory), %(_BrowserExtension_Project_PublishOutput_Assets_Files.FullPath)))</RelativePath>
      </_BrowserExtension_Project_PublishOutput_Assets_Files>
    </ItemGroup>
    <BlazorToBrowserExtensionProcessOutputFiles Input="@(_BrowserExtension_Project_PublishOutput_Assets_Files)">
      <Output TaskParameter="Output" ItemName="_BrowserExtension_Project_PublishOutput_Assets_FilesToCopy" />
    </BlazorToBrowserExtensionProcessOutputFiles>
    <ItemGroup>
      <_BrowserExtension_Project_PublishOutput_BrowserExtension_FilesToCopy Include="@(_BrowserExtension_Project_PublishOutput_Assets_FilesToCopy)">
        <CopyToRelativeDirectory>%(_BrowserExtension_Project_PublishOutput_Assets_FilesToCopy.ContentRelativeDirectory)</CopyToRelativeDirectory>
      </_BrowserExtension_Project_PublishOutput_BrowserExtension_FilesToCopy>
    </ItemGroup>

    <!-- TODO: To remove this custom dotnet runtime when .Net 7.0 support is removed -->
    <Message Importance="normal" Text="  Replacing 'dotnet.*.js' with custom CSP compliant version" Condition="'$(TargetFramework)' == 'net7.0'" />
    <PropertyGroup>
      <_BrowserExtension_Package_Contents_Directory>$(MSBuildThisFileDirectory)..\content</_BrowserExtension_Package_Contents_Directory>
      <_BrowserExtension_Package_Contents_DotNet70Js_FilePath>$(_BrowserExtension_Package_Contents_Directory)\dotnet-7.0.js</_BrowserExtension_Package_Contents_DotNet70Js_FilePath>
    </PropertyGroup>
    <ItemGroup>
      <_BrowserExtension_Project_PublishOutput_BrowserExtension_FilesToCopy Include="$(_BrowserExtension_Package_Contents_DotNet70Js_FilePath)"
                                                                          Condition="'$(TargetFramework)' == 'net7.0'">
        <CopyToRelativeDirectory>framework</CopyToRelativeDirectory>
      </_BrowserExtension_Project_PublishOutput_BrowserExtension_FilesToCopy>
    </ItemGroup>

    <!-- Copy files -->
    <Message Importance="normal" Text="  Copying files to '$(_BrowserExtension_Project_PublishOutput_BrowserExtension_Directory)'" />
    <Copy SourceFiles="@(_BrowserExtension_Project_PublishOutput_BrowserExtension_FilesToCopy)"
          DestinationFolder="$(_BrowserExtension_Project_PublishOutput_BrowserExtension_Directory)\%(_BrowserExtension_Project_PublishOutput_BrowserExtension_FilesToCopy.CopyToRelativeDirectory)"
          SkipUnchangedFiles="true" />

    <!-- Replace content -->
    <Message Importance="normal" Text="  Replacing content of 'blazor.webassembly.js' and 'dotnet.*.js'" />
    <ItemGroup>
      <_BrowserExtension_Project_PublishOutput_BrowserExtension_Framework_BlazorJs_FilePath Include="$(_BrowserExtension_Project_PublishOutput_BrowserExtension_Framework_Directory)\blazor.webassembly.js" />
      <_BrowserExtension_Project_PublishOutput_BrowserExtension_Framework_DotnetJs_FilePath Include="$(_BrowserExtension_Project_PublishOutput_BrowserExtension_Framework_Directory)\dotnet.*.js" />
    </ItemGroup>
    <BlazorToBrowserExtensionReplaceContent Files="@(_BrowserExtension_Project_PublishOutput_BrowserExtension_Framework_BlazorJs_FilePath)"
                                            Replace="@(_BrowserExtension_BlazorJs_FileContentReplacements)" />
    <BlazorToBrowserExtensionReplaceContent Files="@(_BrowserExtension_Project_PublishOutput_BrowserExtension_Framework_DotnetJs_FilePath)"
                                            Replace="@(_BrowserExtension_DotNetJs_FileContentReplacements)" />

    <Message Importance="normal" Text="  Replacing content of other asset files" />
    <ItemGroup>
      <_BrowserExtension_Project_PublishOutput_BrowserExtension_FilesToReplaceContent Include="$(_BrowserExtension_Project_PublishOutput_BrowserExtension_Framework_Directory)\blazor.boot.json" />
      <_BrowserExtension_Project_PublishOutput_BrowserExtension_FilesToReplaceContent Include="$(_BrowserExtension_Project_PublishOutput_BrowserExtension_Directory)\$(PackageId).styles.css"
                                                                                      Condition="Exists('$(_BrowserExtension_Project_PublishOutput_BrowserExtension_Directory)\$(PackageId).styles.css')" />
    </ItemGroup>
    <BlazorToBrowserExtensionReplaceContent Files="@(_BrowserExtension_Project_PublishOutput_BrowserExtension_FilesToReplaceContent)"
                                            Replace="@(_BrowserExtension_Other_FileContentReplacements)" />

    <!-- Duplicate entry files to support routing -->
    <Message Importance="normal" Text="  Processing routing files" />
    <BlazorToBrowserExtensionProcessRoutingFiles Input="@(RazorComponent)"
                                                 AssetsPath="$(_BrowserExtension_Project_Assets_Directory)"
                                                 EntryFile="$(_BrowserExtension_Project_PublishOutput_BrowserExtension_Directory)\$(BrowserExtensionRoutingEntryFile)">
      <Output TaskParameter="Output" ItemName="_BrowserExtension_Project_PublishOutput_BrowserExtension_RoutingFiles" />
    </BlazorToBrowserExtensionProcessRoutingFiles>

    <Message Importance="normal" Text="  Copying routing file %(_BrowserExtension_Project_PublishOutput_BrowserExtension_RoutingFiles.Route)" />
    <Copy SourceFiles="@(_BrowserExtension_Project_PublishOutput_BrowserExtension_RoutingFiles)"
          DestinationFiles="$(_BrowserExtension_Project_PublishOutput_BrowserExtension_Directory)\%(_BrowserExtension_Project_PublishOutput_BrowserExtension_RoutingFiles.Route)"
          SkipUnchangedFiles="true" />

    <!-- Completed -->
    <Message Importance="high" Text="Conversion completed from published Blazor application to Browser Extension" />
    <Message Importance="high" Text="$(ProjectName) (Browser Extension output) -> $(_BrowserExtension_Project_PublishOutput_BrowserExtension_Directory)" />

  </Target>

</Project>